<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- maybe bluetooth opration will lost many time.so show this info -->

    <TextView
        android:id="@+id/pre_info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:gravity="center"
        android:text="@string/pre_info"
        android:textColor="@color/color_white"
        android:textSize="@dimen/big_font_size" />

    <!--  -->

    <RelativeLayout
        android:id="@+id/Layout_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background" >

        <TextView
            android:id="@+id/welcome_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3px"
            android:text="@string/welcome_content"
            android:textColor="@color/color_white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/normal_font_size" />

        <TextView
            android:id="@+id/welcome_click_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/welcome_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="10dp"
            android:paddingRight="3px"
            android:text="@string/into"
            android:textColor="@color/color_white"
            android:textSize="@dimen/small_font_size" />
    </RelativeLayout>
    <!-- bluetooth  Pairing request dialog -->

    <LinearLayout
        android:id="@+id/Layout_pairing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_background"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="3" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pairing_request_title"
            android:textColor="@color/color_white"
            android:textSize="@dimen/big_font_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/pairing_info"
                android:textColor="@color/color_white"
                android:textSize="@dimen/big_font_size" />

            <TextView
                android:id="@+id/device_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:textSize="@dimen/big_font_size" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/pairing_request_button"
            android:textColor="@color/color_white"
            android:textSize="@dimen/big_font_size" />
    </LinearLayout>

</FrameLayout>