<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.ingenic.glasssync" >

    <original-package android:name="cn.ingenic.glasssync" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- phone -->
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS" />
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS_FULL" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.MODIFY_PHONE_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.MASTER_CLEAR" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="com.android.email.permission.ACCESS_PROVIDER" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_WAP_PUSH" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="com.android.email.permission.ACCESS_PROVIDER" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER" />
    <uses-permission android:name="android.permission.REBOOT" />
    <uses-permission android:name="android.permission.DELETE_CACHE_FILES" />
    <uses-permission android:name="android.permission.ACCESS_CACHE_FILESYSTEM" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.WRITE_CALL_LOG" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.GET_PACKAGE_SIZE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.CAMERA" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" >
    </uses-permission>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
	
    <application android:name="SyncApp" android:label="@string/app_label"
        android:persistent="true"
	android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
	android:icon="@drawable/luncher"
	android:allowBackup="true">

        <service android:name=".services.SyncService" >
            <intent-filter>
                <action android:name="cn.ingenic.glasssync.SYNC_SERVICE" />
            </intent-filter>
        </service>

        <receiver android:name="cn.ingenic.glasssync.BondClearReceiver" >
            <intent-filter>
                <action android:name="cn.ingenic.glasssync.BOND_CLEAR" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".phone.InCall"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Wallpaper.NoTitleBar" >
        </activity>

        <!--
        <receiver android:name=".sms2.SmsReceiver">
			<intent-filter>
				<action android:name="android.provider.Telephony.SMS_RECEIVED" />
			</intent-filter>
		</receiver>
        -->


        <!-- for OTA update -->
        <activity
            android:name=".updater.NoticesActivity"
            android:theme="@android:style/Theme.Dialog" >
        </activity>

        <!-- for camera -->
        <activity
            android:name=".camera.CameraClient"
            android:label="@string/app_label"
            android:launchMode="singleTop"
            android:screenOrientation="landscape" >
        </activity>

        <activity-alias
            android:name="cn.ingenic.glasssync.camera.CameraLauncher"
            android:icon="@mipmap/ic_launcher_camera"
            android:label="@string/watch_camera_title"
            android:targetActivity="cn.ingenic.glasssync.camera.CameraClient" >
        </activity-alias>

        <!-- call log -->

        <receiver android:name=".calllog.RemoveMissedCallsReceiver" >
            <intent-filter>
                <action android:name="cn.ingenic.sync.remove_missed_calls" />
            </intent-filter>
        </receiver>
        <!-- bluetooth -->
        <activity
            android:name=".bluetooth.CaptureActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:windowSoftInputMode="stateAlwaysHidden" >
        </activity>
        <activity android:name=".bluetooth.Welcome_Activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".bluetooth.Load_Activity" />
	<activity android:name=".bluetooth.Bind_Activity" />        
        <!-- kli occupy! -->

        <activity
            android:name=".devicemanager.AddDeviceAdminActivity"
            android:screenOrientation="portrait" >
        </activity>

        <receiver
            android:name=".devicemanager.DeviceReceiver"
            android:permission="android.permission.BIND_SERVICE_ADMIN" >
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/lock_screen" />

            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>
        <receiver android:name=".devicemanager.AppsReceiver" >
            <intent-filter>
                <action android:name="cn.ingenic.action.sync" />
            </intent-filter>
        </receiver>
        <!-- kli end -->


        <!-- for Calendar -->
        <receiver android:name=".calendar.CalendarSyncReceiver" >
            <intent-filter>
                <action android:name="receiver.action.CONNECTIVITY_CHANGE" />
                <action android:name="android.intent.action.EVENT_REMINDER" />
                <action android:name="com.android.calendar.action_delete_event_from_watch" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PROVIDER_CHANGED" />

                <data android:scheme="content" />
                <data android:host="com.android.calendar" />
            </intent-filter>
        </receiver>

	<!-- for contacts -->
        <receiver android:name="cn.ingenic.glasssync.contact.SyncServiceReceiver" >
            <intent-filter>
                <action android:name="action.sync_service_ready.RECEIVER" />
                <action android:name="action.sync_service_ready.restart_module" />
            </intent-filter>
        </receiver>

        <provider
            android:name="cn.ingenic.glasssync.contact.ContactsLiteProvider"
            android:authorities="cn.ingenic.contactslite"
            android:exported="true"
            android:multiprocess="false"
            android:readPermission="android.permission.READ_CONTACTS"
            android:writePermission="android.permission.WRITE_CONTACTS" />

	<!-- for sms -->
        <receiver android:name="cn.ingenic.glasssync.sms.SyncServiceReceiver">
            <intent-filter>
                <action android:name="action.sync_service_ready.RECEIVER"/>
                <action android:name="action.sync_service_ready.restart_module"/>
            </intent-filter>
        </receiver>
      
        <provider
            android:name="cn.ingenic.glasssync.sms.SmsMidProvider"
            android:authorities="sms-dest"
            android:grantUriPermissions="true"
            android:exported="true"/>

    </application>

</manifest>
